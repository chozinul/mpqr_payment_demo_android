<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_merchant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_merchant"
        tools:context="com.mastercard.labs.mpqrpayment.merchant.MerchantActivity"
        android:background="@color/colorVeryLightGrey">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_merchant_code"
                    android:gravity="center"
                    android:textSize="@dimen/size_x"
                    android:textColor="@color/colorTextBlack"/>

            <TextView
                    android:id="@+id/txt_what_is_merchant_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="@string/what_is_merchant_code"
                    android:textColor="@color/colorTextBlue"
                    android:textStyle="bold"
                    android:gravity="center"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/rectangle_border_width"
                    android:background="@color/colorPinkishGrey"/>

            <RelativeLayout
                    android:id="@+id/rl_merchant_code"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@color/colorWhite">

                <TextView
                        android:id="@+id/txt_merchant_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/merchant_code"
                        android:textSize="@dimen/size_small"/>

                <EditText
                        android:id="@+id/txt_merchant_code_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_merchant_code"
                        android:inputType="numberDecimal"
                        android:digits="0123456789"
                        android:textSize="@dimen/size_24"
                        android:layout_toStartOf="@+id/pb_merchant_info"
                        tools:drawableEnd="@drawable/success_tick"
                        tools:text="12345678"/>

                <ProgressBar
                        android:id="@+id/pb_merchant_info"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/txt_merchant_code_value"
                        android:layout_alignBottom="@id/txt_merchant_code_value"
                        android:layout_alignParentEnd="true"
                        android:indeterminate="true"
                        android:visibility="gone"/>
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/rectangle_border_width"
                    android:background="@color/colorPinkishGrey"/>

            <LinearLayout
                    android:id="@+id/ll_merchant_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <RelativeLayout
                        android:id="@+id/rl_merchant_name"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:background="@color/colorWhite">

                    <TextView
                            android:id="@+id/txt_merchant_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/merchant_code"
                            android:textSize="@dimen/size_small"/>

                    <EditText
                            android:id="@+id/txt_merchant_name_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_merchant_name"
                            android:inputType="numberDecimal"
                            android:digits="0123456789."
                            android:textSize="@dimen/size_24"
                            android:editable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            tools:text="FarmToTable F&amp;B"/>
                </RelativeLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rectangle_border_width"
                        android:background="@color/colorPinkishGrey"/>

                <RelativeLayout
                        android:id="@+id/rl_merchant_city"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:background="@color/colorWhite">

                    <TextView
                            android:id="@+id/txt_merchant_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/merchant_city"
                            android:textSize="@dimen/size_small"/>

                    <EditText
                            android:id="@+id/txt_merchant_city_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_merchant_city"
                            android:inputType="numberDecimal"
                            android:digits="0123456789."
                            android:textSize="@dimen/size_24"
                            android:editable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            tools:text="Singapore"/>
                </RelativeLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rectangle_border_width"
                        android:background="@color/colorPinkishGrey"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
            android:id="@+id/next_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="bottom"
            android:text="@string/action_next"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@color/colorDeepSeaBlue"/>

</LinearLayout>
