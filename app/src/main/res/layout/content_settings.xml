<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorVeryLightGrey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_settings"
    tools:context="com.mastercard.labs.mpqrpayment.activity.SettingsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Notifications setting -->
            <RelativeLayout
                android:id="@+id/notificationsMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/txtNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sms"
                    android:textAllCaps="true"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/size_small" />

                <TextView
                    android:id="@+id/txtNotificationsDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtNotifications"
                    android:layout_marginTop="10dp"
                    android:text="@string/smsMessage"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_x"
                    android:layout_toStartOf="@+id/switchNotifications" />

                <Switch
                    android:id="@+id/switchNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:checked="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPinkishGrey"/>

            <RelativeLayout
                android:id="@+id/mobile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/mobile_title"
                    android:text="@string/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_toStartOf="@+id/img_editable"
                    android:textAllCaps="true"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/size_small" />

                <TextView
                    android:id="@+id/mobile_value"
                    tools:text="092239921"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/mobile_title"
                    android:layout_alignStart="@id/mobile_title"
                    android:layout_below="@id/mobile_title"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorTextMainColor"
                    android:textSize="@dimen/size_x" />

                <ImageView
                    android:id="@+id/img_editable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mobile_value"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/mobile_title"
                    android:contentDescription="@string/transaction_detail"
                    android:src="@drawable/ic_right_arrow" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>